---
/**
 * * Contact section for the website
 */

import ContactForm from "@components/Forms/ContactForm.astro";
import { Image } from "astro:assets";

interface Props {
	class?: string;
}

const { class: className } = Astro.props as Props;

import ringsImage from "@assets/images/rings-min.jpg";
---

<section
	id="contact"
	class="mx-auto max-w-md scroll-mt-10 px-4 py-8 md:max-w-6xl md:py-12"
	class:list={[className]}
>
	<h2 class="h2 md:px-12 lg:text-6xl">Lets Talk!</h2>
	<div class="grid gap-y-10 md:grid-cols-2">
		<div class="border-primary-300 pt-8 md:border-r md:pr-20 md:pl-12">
			<p class="description text-lg">
				Have questions or are you ready to get a quote? I am here to help! Reach me out via email or send me a message,
				and I will get back to you in 1-2 business days. Let's capture your story together.
			</p>
			<div class="mx-auto mt-8 aspect-square overflow-hidden">
				<Image
					src={ringsImage}
					alt="wedding rings"
					width={450}
					densities={[1.5, 2]}
					class="h-full w-full object-cover"
				/>
			</div>
		</div>
		<div class="md:pr-12 md:pl-20">
			<div>
				<h3 class="h3 text-primary-500">Email Now</h2>
				<div>creativeshutterevents@gmail.com</div>
			</div>

			<div class="mt-3">
				<h3 class="h3 text-primary-500">Send a message</h2>
				<div>+972 55‑264‑0662</div>
			</div>
		</div>
	</div>
</section>
